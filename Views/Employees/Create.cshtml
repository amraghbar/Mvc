
@{
    ViewData["Title"] = "Create";
}
@model Employee

<h1>Add Employee</h1>

<form asp-action="Store" asp-controller="Employees">
    <div class="form-group row">
        <label  asp-for="Name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Email">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword3" asp-for="Password" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Password">
        </div>
    </div>
   
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Add</button>
        </div>
    </div>
</form>