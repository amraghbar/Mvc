@model User

<h1>Login User</h1>

<form asp-action="Login" asp-controller="Users">
    <div class="text-danger mb-3">@ViewBag.Error</div>

    <div class="form-group row mb-3">
        <label asp-for="UserName" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="UserName" placeholder="Enter your username">
        </div>
    </div>

    <div class="form-group row mb-4">
        <label asp-for="Password" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" asp-for="Password" placeholder="Enter your password">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary me-2">Login</button>
            <a asp-action="Register" asp-controller="Users" class="btn btn-secondary">Register</a>
        </div>
    </div>

    
</form>
